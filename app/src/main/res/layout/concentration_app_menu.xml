<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_concentration_app_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/b1"
    tools:context="mobile.esprit.brainup.ConcentrationAppMenuActivity">

    <LinearLayout
        android:id="@+id/linearLayout11"
        android:layout_width="match_parent"
        android:layout_weight="0.20"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_height="450dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="136dp"
            android:orientation="horizontal"
            android:layout_weight="0.21">
            <ImageView
                android:id="@+id/colorphun"
                android:layout_width="128dp"
                android:layout_height="122dp"
                android:background="@drawable/colorphun"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:text="Score : 1"
                android:textColor="#CCCCCC"
                android:textSize="25.0sp"
                android:textStyle="bold" />
            <Button
                android:id="@+id/playcolorphun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Color phun"
                android:textColor="#CC0099"
                android:textSize="25.0sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <ImageView
                android:id="@+id/spaceship"
                android:layout_width="128dp"
                android:layout_height="137dp"
                android:background="@drawable/spaceship"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:text="Score : 1"
                android:textColor="#CCCCCC"
                android:textSize="25.0sp"
                android:textStyle="bold" />
            <Button
                android:id="@+id/playspaceship"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Spaceship"
                android:textColor="#CC0099"
                android:textSize="25.0sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
