<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="100dp"
        android:paddingBottom="16dp"
        android:elevation="2dp"
        android:background="@drawable/profile_background">

        <TextView
            android:id="@+id/tvNamePlayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="68dp"
            android:layout_marginBottom="8dp"
            android:text="Current Player"
            android:textSize="24sp"
            android:textColor="@android:color/black"
            android:fontFamily="sans-serif"/>

        <TextView
            android:id="@+id/tvPEmail"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tvNamePlayer"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:lines="2"
            android:textColor="@color/black"
            android:visibility="visible"
            android:text="Director of Project Management at GoldenPhase Solar"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"/>

        <TextView
            android:id="@+id/tvAgeP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tvPEmail"
            android:layout_marginBottom="16dp"
            android:text="Greater San Diego Area . 500"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-light"/>

        <TextView
            android:id="@+id/tvAddressP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tvAgeP"
            android:layout_marginBottom="16dp"
            android:textColor="@color/black"
            android:text="Greater San Diego Area . 500"
            android:textSize="22sp"
            android:fontFamily="sans-serif-light"/>

        <Space
            android:id="@+id/spaceHolder"
            android:layout_width="10dp"
            android:layout_height="0dp"
            android:layout_below="@id/tvAddressP"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/tvSummaryP"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/btn_logoutProfileplayer"
            android:gravity="center"
            android:lines="2"
            android:ellipsize="end"
            android:textColor="@color/black"
            android:text="I'm a renewable energy executive with 10 years of experience, and have built strong skills in getting companies"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingEnd="10dp"
            android:textColor="@android:color/white"
            android:text="Logout"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:layout_below="@+id/spaceHolder"
            android:layout_centerHorizontal="true"
            android:id="@+id/btn_logoutProfileplayer" />
    </RelativeLayout>

    <include
        android:id="@+id/photoHeader"
        layout="@layout/photo_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_anchor="@id/relativeLayout1"
        app:layout_anchorGravity="top|center"/>


</android.support.design.widget.CoordinatorLayout>