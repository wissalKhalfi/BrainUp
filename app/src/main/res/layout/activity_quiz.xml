<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/b1"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="mobile.esprit.brainup.MathQuiz.BrainChallenge">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:textColor="#CC0099"
        android:id="@+id/wrong"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="19dp"
        android:layout_alignRight="@+id/button"
        android:layout_alignEnd="@+id/button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:textColor="#CC0099"
        android:id="@+id/right"
        android:layout_marginBottom="30dp"
        android:layout_above="@+id/wrong"
        android:layout_alignLeft="@+id/wrong"
        android:layout_alignStart="@+id/wrong" />

    <TextView
        android:id="@+id/timers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:text="00:00:49"
        android:textColor="#CC0099"
        android:textSize="25.0sp"
        android:textStyle="bold"
        android:layout_below="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Question 1"
        android:textColor="#CC0099"
        android:id="@+id/textView"
        android:layout_marginTop="13dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:background="@drawable/button"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="OK"
        android:id="@+id/button"
        android:layout_above="@+id/right"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:textColor="#CC0099"
        android:id="@+id/numberInputed"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="My numbers to display"
        android:textColor="#CC0099"
        android:id="@+id/myNumbers"
        android:layout_above="@+id/numberInputed"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="The operation is as follows:"
        android:textStyle="bold"
        android:textSize="22dp"
        android:textColor="#CC0099"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_above="@+id/numberInputed"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="36dp" />


</RelativeLayout>
